<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/sc1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/contain"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorNo">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorNoT"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        app:layout_constraintRight_toLeftOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/imagesoalb"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:visibility="invisible"
            android:layout_marginTop="70dp"
            android:src="@mipmap/ic_launcher"
            />

        <ImageView
            android:id="@+id/image2soalb2"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:visibility="invisible"
            android:layout_marginTop="70dp"
            android:src="@mipmap/ic_launcher"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"

            android:background="@color/colorTrans">
            <ImageView
                android:id="@+id/imagesoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@mipmap/ic_launcher"/>




            <ImageView
                android:id="@+id/image2soal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/imagesoal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@mipmap/ic_launcher"/>


            <TextView
                android:id="@+id/txtNoSoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image2soal" />

            <TextView
                android:id="@+id/txtSoal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="3dp"
                android:text="Siapa nama ayah dari tetangga saya?sadjkaskdaasdasdsdasdasdasdasdshkdashdhsadhashdhasdhkajsdjsad"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toRightOf="@id/txtNoSoal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image2soal"/>
            <Button
                android:id="@+id/btnA"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/button_click"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/txtSoal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <Button
                android:id="@+id/btnB"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/button_click"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/btnA"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <Button
                android:id="@+id/btnC"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/button_click"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/btnB"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <Button
                android:id="@+id/btnD"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/button_click"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/btnC"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <Button
                android:id="@+id/btnE"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/button_click"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/btnD"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
